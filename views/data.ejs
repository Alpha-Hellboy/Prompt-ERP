    <div class="container-fluid py-2">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h6 class="mb-0">Data Table</h6>
                </div>
                <div class="col-6 text-end">
                  <button class="btn btn-outline-primary btn-sm mb-0" onclick="location.href='/data/download'">Download All</button>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Key Person</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Firm Name</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Number</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">City</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Reference</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let user of data) {%>
                    <tr>
                      <td class="align-middle text-center text-sm">
                        <%= user.name %>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= user.firmName %>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= user.number %>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= user.city %>
                      </td>
                      <td class="align-middle text-center">
                        <span class="badge badge-sm 
        <% if (user.reference === 'Google Search') { %>
          bg-gradient-primary
        <% } else if (user.reference === 'Newspaper Ads') { %>
          bg-gradient-success
        <% } else if (user.reference === 'Kalyanam Event') { %>
          bg-gradient-danger          
        <% } else {%>
          bg-gradient-secondary
        <% } %>">
        <%= user.reference %>
      </span>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= user.email %>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <%= user.submissionDate %>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <form action="/data/<%= user._id %>?_method=DELETE" method="post">
